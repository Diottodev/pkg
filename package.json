{
  "name": "pkg",
  "type": "commonjs",
  "version": "0.21.11",
  "packageManager": "pnpm@8.10.2",
  "description": "Use the right package manager",
  "author": "Nicolas Diotto <nicodiottodev@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Diottodev/pkg#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Diottodev/pkg.git"
  },
  "bugs": {
    "url": "https://github.com/Diottodev/pkg/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "pkg": "bin/pkg.mjs",
    "pkclean": "bin/pkclean.mjs",
    "pkr": "bin/pkr.mjs",
    "pkup": "bin/pkup.mjs",
    "pkx": "bin/pkx.mjs",
    "pkag": "bin/pkag.mjs",
    "pkun": "bin/pkun.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "dev": "esno src/commands/pkg.ts",
    "pkr": "esno src/commands/pkr.ts",
    "build": "unbuild",
    "stub": "unbuild --stub",
    "release": "bumpp && npm publish",
    "lint": "gts lint",
    "test": "vitest",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "devDependencies": {
    "@posva/prompts": "^2.4.4",
    "@types/fs-extra": "^11.0.4",
    "@types/ini": "^1.3.33",
    "@types/mocha": "^10.0.4",
    "@types/node": "^20.8.2",
    "@types/which": "^3.0.2",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "esno": "^0.17.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "find-up": "^6.3.0",
    "fs-extra": "^11.1.1",
    "fzf": "^0.5.2",
    "gts": "^5.2.0",
    "ini": "^4.1.1",
    "kleur": "^4.1.5",
    "rimraf": "^5.0.5",
    "terminal-link": "^3.0.0",
    "typescript": "~5.2.0",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6",
    "which": "^4.0.0"
  },
  "dependencies": {
    "rollup": "^4.4.1"
  }
}
